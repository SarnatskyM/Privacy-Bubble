{
  "manifest_version": 3,
  "name": "Privacy Bubble",
  "version": "1.0",
  "description": "Проверяет сайты на трекеры, куки и аналитические скрипты.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}